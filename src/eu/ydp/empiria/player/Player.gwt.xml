<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='empiria.player'>
	<!-- Inherit the core Web Toolkit stuff. -->
	<inherits name='com.google.gwt.user.User' />
	<inherits name='com.google.gwt.user.ImageBundle' />
	<inherits name="com.google.gwt.http.HTTP" />
	<inherits name="com.google.gwt.xml.XML" />
	<inherits name="com.google.gwt.json.JSON" />
	<inherits name='com.allen_sauer.gwt.voices.gwt-voices' />
	<inherits name='com.mathplayer.Math_player' />
	<inherits name='eu.ydp.canvasadapter.canvasadapter' />
	<inherits name='eu.ydp.jsfilerequest.jsfilerequest' />
	<!-- google gin -->
	<inherits name="com.google.gwt.inject.Inject" /> 

	<set-property name="compiler.emulatedStack" value="true" />
	<set-configuration-property name="compiler.emulatedStack.recordFileNames"
		value="true" />

	<!-- Specify the app entry point class. -->
	<entry-point class='eu.ydp.empiria.player.client.PlayerEntryPoint' />

	<!-- css parser -->

	<script src="video/AC_RunActiveContent.js" />
	<script src="video/FAVideo.js" />
	<script src="jscss/cssparser.js" />
	<define-property name="mobile.user.agent" values="android23" />
	<extend-property name="mobile.user.agent" values="android3" />
	<extend-property name="mobile.user.agent" values="android321" />
	<extend-property name="mobile.user.agent" values="android4" />
	<extend-property name="mobile.user.agent" values="unknown" />

	<property-provider name="mobile.user.agent" generator="eu.ydp.empiria.player.user.rebind.MobileUserAgentPropertyGenerator"/>
	
	<collapse-property name="mobile.user.agent" values="*" />
	
	<replace-with
		class="eu.ydp.empiria.player.client.module.object.impl.FlashVideoImpl">
		<when-type-is
			class="eu.ydp.empiria.player.client.module.object.impl.VideoImpl" />
	</replace-with>

	<!-- Use video tag for iphone browser -->
	<replace-with
		class="eu.ydp.empiria.player.client.module.object.impl.HTML5VideoImpl">
		<when-type-is
			class="eu.ydp.empiria.player.client.module.object.impl.VideoImpl" />
		<any>
			<when-property-is name="user.agent" value="safari" />
		</any>

	</replace-with>
	<replace-with
		class="eu.ydp.empiria.player.client.module.object.impl.HTML5VideoAndroidImpl">
		<when-type-is
			class="eu.ydp.empiria.player.client.module.object.impl.VideoImpl" />
		<any>
			<when-property-is name="mobile.user.agent" value="android23" />
			<when-property-is name="mobile.user.agent" value="android321" />
			<when-property-is name="mobile.user.agent" value="android4" />
		</any>
	</replace-with>
	<replace-with
		class="eu.ydp.empiria.player.client.module.object.impl.HTML5VideoAndroid3Impl">
		<when-type-is
			class="eu.ydp.empiria.player.client.module.object.impl.VideoImpl" />
			<when-property-is name="mobile.user.agent" value="android3" />
	</replace-with>
	<!-- link as default value for audio -->
	<replace-with
		class="eu.ydp.empiria.player.client.module.object.impl.EmbedAudioImpl">
		<when-type-is
			class="eu.ydp.empiria.player.client.module.object.impl.AudioImpl" />
	</replace-with>

	<!-- Use audio tag for iphone browser -->
	<replace-with
		class="eu.ydp.empiria.player.client.module.object.impl.HTML5AudioImpl">
		<when-type-is
			class="eu.ydp.empiria.player.client.module.object.impl.AudioImpl" />
		<any>
			<when-property-is name="user.agent" value="safari" />
		</any>
	</replace-with>

	<!-- default implementation of sound executor -->
	<replace-with
		class="eu.ydp.empiria.player.client.controller.extensions.internal.sound.SoundExecutorSwf">
		<when-type-is
			class="eu.ydp.empiria.player.client.controller.extensions.internal.sound.SoundExecutor" />
	</replace-with>

	<!-- html5 implementation of sound executor -->
	<replace-with
		class="eu.ydp.empiria.player.client.controller.extensions.internal.sound.SoundExecutorHtml5">
		<when-type-is
			class="eu.ydp.empiria.player.client.controller.extensions.internal.sound.SoundExecutor" />
		<any>
			<when-property-is name="user.agent" value="safari" />
		</any>
	</replace-with>
	
	<define-linker name="xsiframescripts" class="eu.ydp.empiria.player.core.linker.CrossSizeIframeWithScriptsLinker"/>
	<add-linker name="xsiframescripts"/>
	
</module>
