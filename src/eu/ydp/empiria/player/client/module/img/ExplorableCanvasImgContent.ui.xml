<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:eu.ydp.canvasadapter.client" xmlns:components="urn:import:eu.ydp.empiria.player.client.components">
	<ui:style>
		.imagearea{
			cursor: move;
		}
	</ui:style>
	<g:FlowPanel styleName="qp-img-explorable" ui:field="mainPanel">
		<g:FlowPanel styleName="qp-img-explorable-window" ui:field="windowPanel">
			<g:FlowPanel addStyleNames='qp-img-explorable-image-panel {style.imagearea}' ui:field="imagePanel" >
				<components:PanelWithScrollbars ui:field="scrollbarsPanel">
					<c:CanvasAdapter styleName="qp-img-explorable-image-canvas" ui:field="imageCanvas" />
				</components:PanelWithScrollbars>
			</g:FlowPanel>
		</g:FlowPanel>
		<g:FlowPanel styleName="qp-img-explorable-toolbox">
			<g:PushButton styleName="qp-img-explorable-zoomin" ui:field="zoominButton" />
			<g:PushButton styleName="qp-img-explorable-zoomout" ui:field="zoomoutButton" />
		</g:FlowPanel>
		<g:Label ui:field="consoleLabel"></g:Label>
		<g:FlowPanel ui:field="tempPanel">
			<g:Image ui:field="tempImage"/>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 