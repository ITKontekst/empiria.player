<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
    <ui:with type="eu.ydp.empiria.player.client.module.core.answer.MarkAnswersStyleNameConstants"
             field="mark"></ui:with>
    <ui:with type="eu.ydp.empiria.player.client.module.choice.ChoiceStyleNameConstants"
             field="choice"></ui:with>
    <g:FlowPanel ui:field="mainPanel" styleName="{choice.QP_CHOICE_OPTION_BOX}">
        <g:FlowPanel ui:field="optionPanel"
                     styleName="{choice.QP_CHOICE_OPTION} {mark.QP_MARKANSWERS_BUTTON_INACTIVE}">
            <g:FlowPanel ui:field="markAnswersPanel"
                         styleName="{mark.QP_MARKANSWERS_BUTTON_INACTIVE}"/>
            <g:FlowPanel ui:field="buttonPlace" styleName="{choice.QP_CHOICE_BUTTON_PLACE}"/>
            <g:FlowPanel ui:field="labelPanel"
                         styleName="{choice.QP_CHOICE_LABEL} {mark.QP_MARKANSWERS_LABEL_INACTIVE}">
                <g:AbsolutePanel ui:field="container"
                                 styleName="{choice.QP_CHOICE_OPTION_CONTAINER}">
                    <g:FlowPanel ui:field="contentWidgetPlace"/>
                    <g:AbsolutePanel ui:field="cover"
                                     styleName="{choice.QP_CHOICE_OPTION_COVER}"/>
                </g:AbsolutePanel>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder> 
