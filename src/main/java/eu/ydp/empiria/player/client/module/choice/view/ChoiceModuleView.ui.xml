<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with type="eu.ydp.empiria.player.client.module.choice.ChoiceStyleNameConstants"
             field="choice"></ui:with>
    <ui:with type="eu.ydp.empiria.player.client.resources.StyleNameConstants" field="res"></ui:with>
    <g:FlowPanel ui:field="mainPanel" styleName="{choice.QP_CHOICE_MODULE}">
        <g:InlineHTML ui:field="promptWidget" styleName="{res.QP_PROMPT}"/>
        <g:FlowPanel ui:field="choicesPanel"/>
    </g:FlowPanel>
</ui:UiBinder> 
