<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with type="eu.ydp.empiria.player.client.module.dictionary.DictionaryStyleNameConstants" field="res"/>
    <g:FlowPanel styleName="{res.QP_DICTIONARY_EXPLANATION}">
        <g:PushButton styleName="{res.QP_DICTIONARY_EXPLANATION_BACK_BUTTON}" ui:field="backButton"/>
        <g:FlowPanel styleName="{res.QP_DICTIONARY_EXPLANATION_TYPE}" ui:field="typePanel">
            <g:Label styleName="{res.QP_DICTIONARY_EXPLANATION_TYPE_LABEL}" ui:field="typeLabel"/>
        </g:FlowPanel>
        <g:FlowPanel styleName="{res.QP_DICTIONARY_EXPLANATION_ENTRY}" ui:field="entryPanel">
            <g:PushButton styleName="{res.QP_DICTIONARY_EXPLANATION_ENTRY_PLAY_BUTTON}" ui:field="entryPlayButton"/>
            <g:Label styleName="{res.QP_DICTIONARY_EXPLANATION_ENTRY_LABEL}" ui:field="entryLabel"/>
        </g:FlowPanel>
        <g:FlowPanel styleName="{res.QP_DICTIONARY_EXPLANATION_ENTRY_DESCRIPTION}" ui:field="entryDescriptionPanel">
            <g:InlineHTML styleName="{res.QP_DICTIONARY_EXPLANATION_ENTRY_DESCRIPTION_LABEL}"
                          ui:field="entryDescriptionLabel"/>
        </g:FlowPanel>
        <g:FocusPanel styleName="{res.QP_DICTIONARY_EXPLANATION_ENTRY_EXAMPLE}" ui:field="entryExamplePanel">
            <g:Label styleName="{res.QP_DICTIONARY_EXPLANATION_ENTRY_EXAMPLE_LABEL}" ui:field="entryExampleLabel"/>
        </g:FocusPanel>
        <g:FocusPanel styleName="{res.QP_DICTIONARY_EXPLANATION_SOURCE}" ui:field="labelPanel">
            <g:Label styleName="{res.QP_DICTIONARY_EXPLANATION_SOURCE_LABEL}" ui:field="labelLabel"/>
        </g:FocusPanel>
        <g:PushButton styleName="{res.QP_DICTIONARY_EXPLANATION_PLAY_BUTTON}" ui:field="playButton"/>
    </g:FlowPanel>
</ui:UiBinder>